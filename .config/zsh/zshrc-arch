#!/bin/zsh

#### Configs
# Basics
export EDITOR=code
export BROWSER=google-chrome-stable
export TERMINAL=urxvtc

path+=("$XDG_CONFIG_HOME/scripts/i3")



#### Aliases
# Basics
alias y='yay --nodiffmenu'



#### Ending
# Common
source ~/.config/zsh/zshrc

# Xorg
[[ -z "$DISPLAY" ]] && [[ "$(tty)" == "/dev/tty1" ]] && exec startx
